{% extends "layout.jinja2" %}
{% block body %}
    <!-- MAIN CONTENT -->
    <section class="main">
      <div id="background">
        <div class="wrap">
          <div class="body">
            <ol class="pagination">
              <li><a href="#first page" class="active">1</li></a>
              <li><a href="#next page">2</li></a>
              <li>..</li>
              <li><a href="#last page">3</li></a>
            </ol>
            <div class="button"><a href="{{request.route_url('create')}}">New entry</a></div>
              <div class="entries">
              {% for entry in posts %}
                <a href="{{request.route_url('detail', id=entry.id)}}"><h3>{{entry.title}}</h3></a>
                <hr>
                <h5>{{entry.creation_date}}</h5>
                <p>{{entry.body}}
                </p>
                <hr>
              </div>
              {% endfor %}
            <div class="button"><a href="{{request.route_url('create')}}">New entry</a></div>
            <ol class="pagination">
              <li><a href="#first page" class="active">1</li></a>
              <li><a href="#next page">2</li></a>
              <li>..</li>
              <li><a href="#last page">3</li></a>
            </ol>
          </div>
        </div>
      </div>
    </section>
{% endblock %}