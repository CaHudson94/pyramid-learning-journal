{% extends "layout.jinja2" %}
{% block body %}
    <!-- MAIN CONTENT -->
    <section class="main">
      <div id="background">
        <div class="wrap">
          <div class="body">
            <div class="entries">
              <h3>{{entry.title}}</h3>
              <div class="button edit"><a href="{{request.route_url('edit', id=entry.id)}}">Edit</a></div>
              <hr>
              <h5>{{entry.creation_date}}</h5>
              <p>{{entry.body}}
              </p>
              <hr>
          </div>
        </div>
      </div>
    </section>
{% endblock %}