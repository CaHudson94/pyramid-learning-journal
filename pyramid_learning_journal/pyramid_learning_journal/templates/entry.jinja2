{% extends "layout.jinja2" %}
{% block body %}
    <!-- MAIN CONTENT -->
    <section class="main">
      <div id="background">
        <div class="wrap">
          <div class="body">
            <div class="entries">
              <h3>{{entry.title}}</h3>
              <hr>
              {% if auth %}<div class="button edit"><a href="{{request.route_url('edit', id=entry.id)}}">Edit</a></div>{% endif %}
              <h6>Created: {{entry.creation_date}} </h6><h6>{% if entry.edit_date != ''%} Edited: {{entry.edit_date}}{% endif %}</h6>
              <p>{{entry.body}}
              </p>
              <hr>
          </div>
        </div>
      </div>
    </section>
{% endblock %}